<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Make Customer field always visible (remove project dependency) -->
    <record id="view_task_form_ghl_customer" model="ir.ui.view">
        <field name="name">project.task.form.ghl.customer</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Force partner_id to always be visible - override invisible condition -->
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id" 
                       string="Customer (Required for GHL)"
                       placeholder="Select contact to sync with GoHighLevel"
                       widget="many2one_avatar_user"/>
            </xpath>
        </field>
    </record>
</odoo>
