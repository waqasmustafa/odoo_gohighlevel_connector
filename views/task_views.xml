<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Override task form to always show Customer field -->
    <record id="project_task_form_show_customer_always" model="ir.ui.view">
        <field name="name">project.task.form.show.customer.always</field>
        <field name="model">project.task</field>
        <!-- Inherit the standard task form view -->
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            
            <!-- Target the exact partner_id field with class o_task_customer_field -->
            <xpath expr="//field[@name='partner_id'][@class='o_task_customer_field']" position="attributes">
                <!-- Force visible by setting invisible to False -->
                <attribute name="invisible">False</attribute>
            </xpath>

        </field>
    </record>
</odoo>
