<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Override task form to always show Customer field -->
    <record id="project_task_form_show_customer_always" model="ir.ui.view">
        <field name="name">project.task.form.show.customer.always</field>
        <field name="model">project.task</field>
        <!-- Inherit the standard task form view -->
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            
            <!-- Replace the original partner_id field to remove invisible condition -->
            <xpath expr="//field[@name='partner_id' and @class='o_task_customer_field']" position="replace">
                <!-- Same field, but WITHOUT invisible="not project_id" -->
                <field name="partner_id"
                       nolabel="0"
                       widget="res_partner_many2one"
                       class="o_task_customer_field"
                       placeholder="Select a contact (required for GHL sync)"/>
            </xpath>

        </field>
    </record>
</odoo>
