<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Override task form to always show Customer field -->
    <record id="project_task_form_show_customer_always" model="ir.ui.view">
        <field name="name">project.task.form.show.customer.always</field>
        <field name="model">project.task</field>
        <!-- Inherit the standard task form view -->
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            
            <!-- Remove invisible condition from partner_id field using attributes -->
            <field name="partner_id" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>

        </field>
    </record>
</odoo>
