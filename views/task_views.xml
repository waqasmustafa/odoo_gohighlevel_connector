<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Override task form to always show Customer field -->
    <record id="project_task_form_show_customer_always" model="ir.ui.view">
        <field name="name">project.task.form.show.customer.always</field>
        <field name="model">project.task</field>
        <!-- Inherit the standard task form view -->
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority" eval="9999"/>
        <field name="arch" type="xml">
            
            <!-- Replace the partner_id field - simpler XPath -->
            <field name="partner_id" widget="res_partner_many2one" position="replace">
                <field name="partner_id" 
                       nolabel="0" 
                       widget="res_partner_many2one" 
                       class="o_task_customer_field"
                       placeholder="Select a contact (required for GHL sync)"/>
            </field>

        </field>
    </record>
</odoo>
